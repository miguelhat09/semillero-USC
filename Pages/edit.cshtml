@page
@model EditModel
@{
    ViewData["Title"] = "EditarSemillero";
}
<h1>@ViewData["Title"]</h1>



<div class="container">

    
    <form method="post">
        <div asp-validation-summary="All"  class="text-danger" >
            <input type="hidden" asp-for="Semillero.idSemillero" >
            <div class="container" >

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Semillero.nombreSemillero"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Semillero.nombreSemillero" class="form-control">
                            
                        </div>
                        <span asp-validation-for="Semillero.nombreSemillero" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Semillero.descripcionSemillero"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Semillero.descripcionSemillero" class="form-control">
                            
                        </div>
                        <span asp-validation-for="Semillero.descripcionSemillero" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Semillero.necesidadesSemillero"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Semillero.necesidadesSemillero" class="form-control">
                            
                        </div>
                        <span asp-validation-for="Semillero.necesidadesSemillero" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Modificar Semillero" class="btn btn-primary form-control">
                        </div>
                        <div class="col-sm-2">
                            
                            
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>

    </form>


</div>


