@page
@model InteresadoModel
@{
    ViewData["Title"] = "Â¿Te interesa este semillero?";
    Layout = "~/Pages/Shared/_LayoutRegistro.cshtml";
}



<nav class="unirme-nav">
    <div></div>
    <h1>Unirme a un semillero</h1>
    <div>
        <a asp-area="" asp-page="/Index">Regresar</a>
    </div>
</nav>

<div class="main-form">
    <div class="crear-centrar">     
        <form method="post" class="unirme-form">
            <input type="hidden" asp-for="Semillero.idSemillero" >

            <label class="unirme-label" asp-for="Semillero.nombreSemillero"></label>
            <input asp-for="Semillero.nombreSemillero" class="unirme-input" readonly>
            <span asp-validation-for="Semillero.nombreSemillero" class="text-danger"></span>

            <label class="unirme-label" asp-for="Semillero.descripcionSemillero"></label>
            <textarea asp-for="Semillero.descripcionSemillero" class="unirme-input" rows="4" cols="20" readonly></textarea>
            <span asp-validation-for="Semillero.descripcionSemillero" class="text-danger"></span>

            
            <label class="unirme-label"  asp-for="Semillero.necesidadesSemillero"></label>
            <textarea asp-for="Semillero.necesidadesSemillero" class="unirme-input" rows="4" cols="20" readonly></textarea>
            <span asp-validation-for="Semillero.necesidadesSemillero" class="text-danger"></span>

            <input type="hidden" asp-for="Semillero.interesadosSemillero" value="@User.Identity.Name" >
            <span asp-validation-for="Semillero.interesadosSemillero" class="text-danger"></span>

            <input type="submit" value="Unirme" class="boton-unirme">
        </form>
    </div>
</div>

<footer class="footer">
    <span>2020 todos los derechos reservados</span>
</footer>

<script>
    window.sr = ScrollReveal();

    sr.reveal('.boton-unirme', {
        duration: 2000,
        origin: 'bottom',
        distance: '20px'
    });
</script>