@page
@model RegisterModel

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Pages/Shared/_LayoutRegistro.cshtml";
}

<main class="main-register">
    <div class="row justify-content-center w-100 mb-4" style="height: 90vh;">
        <div class="col-sm-4 d-flex flex-column align-items-center justify-content-center" style="height: 100vh;">
            <form  class="d-flex flex-column align-items-center p-4 w-100 mb-2" style="height: 65vh; opacity: .9;
             box-shadow: 3px 3px 8px rgba(0,0,0,.7); background: rgb(49, 43, 45);" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="text-light p-2 font-weight-bold mt-3">Registro</h4>
                    <input asp-for="Input.Email" class="w-100 p-3 m-2 border-0 rounded text-center" type="text" placeholder="Ingrese un usuario"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                    <input asp-for="Input.Password" class="w-100 p-3 m-2 border-0 rounded text-center" type="password" placeholder="Ingrese una contraseña"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                    <input asp-for="Input.ConfirmPassword" class="w-100 p-3 m-2 border-0 rounded text-center" type="password" placeholder="Ingrese nuevamente la contraseña"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <input class="boton-login p-3 w-75 mt-3 rounded border-0 text-light font-weight-bold" type="submit" value="Registrarse">
            </form>
            <div>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="enlaces" style="color: rgb(12, 34, 12);">Ir al Login</a>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
