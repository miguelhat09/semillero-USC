@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Contraseña de confirmación";
    Layout = "~/Pages/Shared/_LayoutRegistro.cshtml";
}
<main class="main-register">
    <div class="row justify-content-center w-100 mb-4" style="height: 90vh;">
        <div class="col-sm-4 d-flex flex-column align-items-center justify-content-center" style="height: 100vh;">
            <h2>Por favor verificar en su email la contraseña.</h2>
            <a asp-area="Identity" asp-page="/Account/Login" class="logout-enlaces">Iniciar Sesión</a>
        </div>
    </div>
</main>

